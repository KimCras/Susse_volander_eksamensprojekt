<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  body {
    margin: 2rem;
    background-color: #fcfff6;
  }

  /* BREADCRUMB */
  .breadcrumb-nav {
    margin-bottom: 20px;
  }

  ul.breadcrumb {
    list-style: none;
  }

  ul.breadcrumb li {
    display: inline;
    color: #494242;
    text-decoration: none;
    font-size: 14px;
    font-family: "Lato";
    text-transform: uppercase;
  }

  /* SLASH SYMBOL (/) */
  ul.breadcrumb li + li:before {
    padding: 3px;
    color: #494242;
    content: "/\00a0";
  }

  ul.breadcrumb li a {
    color: #494242;
    text-decoration: none;
  }

  ul.breadcrumb li a:hover {
    color: #f20056;
  }

  /******** MOBIL FORMAT ********/
  .container {
    display: flex;
    flex-direction: column;
  }

.gallery,
  .content {
    max-width: 100%;
  }

  .product-section {
    margin-top: 60px;
  }

  /* Knappen */
  .icon-button {
    width: 100%;
    margin-bottom: 20px;
  }

  /* GALLERI */
  .card-wrapper {
    max-width: 100%;
  }

  img {
    width: 100%;
    display: block;
    border: 1px solid #d1d7c6;
  }

  .img-display {
    overflow: hidden;
  }

  .img-showcase {
    display: flex;
    width: 100%;
    transition: all 0.5s ease;
  }

  .img-showcase img {
    min-width: 100%;
  }

  .img-select {
    display: flex;
    margin-top: 5px;
    gap: 5px;
  }

  .img-item {
    margin: 0.3rem;
  }

  .img-item:nth-child(1),
  .img-item:nth-child(2),
  .img-item:nth-child(3) {
    margin-right: 0;
  }

  .img-item:hover {
    opacity: 0.8;
  }

  /* PRODUCT CONTENT */
  .price {
    display: flex;
    flex-direction: column;
  }

  .title-wrapper {
    display: flex;
    align-items: center;
  }

  .title {
    font-size: 30px;
    margin-right: 10px;
    margin-bottom: 40px;
  }

  .discount {
    font-size: 16px;
    color: #fff;
    max-width: 111px;
    background-color: #ffb700;
    padding: 2px 15px;
  }

  .prices {
    display: flex;
    margin-bottom: 40px;
    font-size: 18px;
  }

  .prices p {
    margin-right: 10px;
  }

  .normal-price {
    color: #8d8787;
    text-decoration: line-through;
  }

  /* KNAP */
  .icon-button {
    background-color: #494242;
    color: #fcfff6;
    border: none;
    padding: 12px 20px;
    font-size: 16px;
    cursor: pointer;
    border-radius: 10px;
    width: 100%;
    margin-bottom: 40px;
    font-family: "Lato";
  }

  .icon-button i {
    margin-left: 5px;
    color: #fcfff6;
  }

  .icon-button:hover {
    color: #494242;
    background-color: #fcbddd;
  }

  /* ACCORDION */
  .accordion {
    background-color: #ecf0e4;
    color: #494242;
    cursor: pointer;
    padding: 18px;
    width: 100%;
    border: none;
    text-align: left;
    outline: none;
    font-size: 16px;
    transition: 0.4s;
    border-bottom: 1px solid #ccc;
    font-family: "Lato";
  }

  .accordion:last-of-type {
    border-bottom: 0;
  }

  .active,
  .accordion:hover {
    background-color: #d1d7c6;
  }

  .accordion:after {
    content: "\002B";
    color: #939985;
    font-weight: 700;
    float: right;
    margin-left: 5px;
  }

  .active:after {
    content: "\2212";
  }

  .panel {
    padding: 0 18px;
    background-color: #fff;
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.4s ease-out, padding 0.4s ease-out;
    max-width: 400px;
  }

  .panel p {
    font-size: 15px;
    font-family: "Lato";
  }

  .ac-1 {
    border-radius: 10px 10px 0px 0px;
  }

  .ac-3 {
    border-radius: 0px 0px 10px 10px;
  }

  /* LINE SECTION */
  .line_section {
    margin-top: 40px;
  }

  hr {
    color: #494242;
    width: 100%;
  }

  .line_section p {
    margin-top: 20px;
  }

  .line_2 {
    margin-top: 20px;
  }

  .line-list {
    padding-left: 0.5em;
    list-style: none;
    margin: 1.5em 0 2em 0;
  }

  .line-list li {
    margin-block: 1em;
    padding-inline-start: 2em;
    position: relative;
    font-family: "Lato";
    color: #494242;
  }

  .line_section li::before {
    content: "";
    display: inline-block;
    position: absolute;
    left: 0;
    transform: rotate(45deg);
    height: 0.8em;
    width: 0.43em;
    border-bottom: 0.15em solid;
    border-right: 0.15em solid;
  }

  /******** DESKTOP FORMAT ********/
  @media only screen and (min-width: 992px){
    .container {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 60px;
    }

    .gallery,
    .content {
      margin: 0 auto;
    }

    .gallery {
      grid-column: 1 / 2;
    }

    .content {
      grid-column: 2 / 3;
    }

    .card-wrapper {
  max-width: 360px;
}

    .title {
  font-size: 35px;
  margin-right: 10px; /* Tilføjer mellemrum mellem titel og rabat */
  margin-bottom: 40px;
}

    .icon-button {
      width: 400px;
    }

    .accordion {
      width: 400px;
    }

    hr {
      width: 400px;
    }
  }
</style>

<script>
  var acc = document.getElementsByClassName("accordion");

  for (var i = 0; i < acc.length; i++) {
    acc[i].addEventListener("click", function () {
      this.classList.toggle("active");
      var panel = this.nextElementSibling;
      if (panel.style.maxHeight) {
        panel.style.maxHeight = null;
        panel.style.paddingTop = null;
        panel.style.paddingBottom = null;
      } else {
        panel.style.maxHeight = panel.scrollHeight + "200px";
        panel.style.paddingTop = "18px";
        panel.style.paddingBottom = "18px";
      }
    });
  }
</script>
