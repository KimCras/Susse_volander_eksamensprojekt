  body.dark,
  body.dark .navbar {
    background-color: #10180d;
  }
  body.dark h1,
  body.dark h2,
  body.dark a,
  body.dark p,
  body.dark ul.breadcrumb li + li:before,
  body.dark ul.breadcrumb li a,
  body.dark ul.breadcrumb li,
  body.dark .kurv,
  body.dark ul.line-list li,
  body.dark .icon-button:hover {
    color: #fff;
  }


  body.dark .icon-button,
  body.dark hr{
    background-color: #384b46;
  }
 body.dark .icon-button:hover{
    background-color: #7f8880;
  }
  
 body.dark .accordion {
    background-color: #384b46;
    color: #fff;
  }

  body.dark .active,
  body.dark .accordion:hover {
    background-color: #7f8880;
  }

  body.dark .accordion:after,
  body.dark .panel p {
    color: #211f1f;
  }


  /* BREADCRUMB */
  .breadcrumb-nav {
    margin-bottom: 20px;
  }

  ul.breadcrumb {
    list-style: none;
  }

  ul.breadcrumb li {
    display: inline;
    color: #494242;
    text-decoration: none;
    font-size: 14px;
    font-family: "Lato";
    text-transform: uppercase;
  }

  /* SLASH SYMBOL (/) */
