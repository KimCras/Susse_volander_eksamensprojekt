<button id="scrollToTopBtn" title="Go to top">Top</button>



<style>
    body.dark #scrollToTopBtn{
        background-color: #384B46 ;
        border: 2px solid #384B46 ;
    }

    body.dark #scrollToTopBtn:hover{
        background-color: #748b79 ;
        border: 2px solid #748b79 ;
    }

#scrollToTopBtn {
    color: #fcfff6;
font-family: "Marine Sikona", sans-serif;
  font-size: 20px;
  position: fixed; 
  bottom: 20px; 
  right: 30px; 
  z-index: 99;
  border: 2px solid #4B6043; 
  outline: none; 
  background-color: #4B6043;
  cursor: pointer; 
  padding: 15px 15px; 
  border-radius: 10px; 
}

#scrollToTopBtn:hover {
    background-color: #6d8863;
    border: 2px solid #6d8863; 
}
    </style>


<script>

document.getElementById('scrollToTopBtn').addEventListener('click', function() {
    window.scrollTo({
      top: 0,
      behavior: 'smooth'
    });
  });

</script>