<style>
  * {
    margin: 0;
    padding: 0;
  }
  .horizontal_slider {
    display: block;
    width: 100%;
    overflow-x: scroll;
    padding: 20px;
    margin: 10px;
    box-sizing: border-box;
  }
  /*this is for chrome/firefox/opera and safari*/
  .horizontal_slider::-webkit-scrollbar {
    display: none;
  }

  .slider_container {
    display: block;
    white-space: nowrap;
  }
  .item {
    display: inline-block;
    margin-right: 12px;
  }
  .item img {
    width: 300px;
    transition: transform 0.3s ease;
  }

  /*.item img:hover {
    transform: scale(1.2);
  }*/

  /* Popup modal styles */
  .popup-modal {
    display: none;
    position: fixed;
    z-index: 1;
    padding-top: 60px;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgba(0, 0, 0, 0.9);
  }

  .popup-modal-content {
    margin: auto;
    display: block;
    width: 80%;
    max-width: 700px;
  }

  .close {
    position: absolute;
    top: 15px;
    right: 35px;
    color: #fff;
    font-size: 40px;
    font-weight: bold;
    transition: 0.3s;
  }

  .close:hover,
  .close:focus {
    color: #bbb;
    text-decoration: none;
    cursor: pointer;
  }
</style>
<script>
  let isDown = false;
  let startX: number;
  let scrollLeft: number;

  const slider = document.querySelector(".horizontal_slider") as HTMLElement;

  slider.addEventListener("mousedown", (e: MouseEvent) => {
    isDown = true;
    slider.classList.add("active");
    startX = e.pageX - slider.offsetLeft;
    scrollLeft = slider.scrollLeft;
  });

  slider.addEventListener("mouseleave", () => {
    isDown = false;
    slider.classList.remove("active");
  });

  slider.addEventListener("mouseup", () => {
    isDown = false;
    slider.classList.remove("active");
  });

  slider.addEventListener("mousemove", (e: MouseEvent) => {
    if (!isDown) return; // 마우스가 눌려있지 않으면 드래그 불가
    e.preventDefault();
    const x = e.pageX - slider.offsetLeft;
    const walk = (x - startX) * 8; // 스크롤 속도 조절
    slider.scrollLeft = scrollLeft - walk;
  });
</script>
