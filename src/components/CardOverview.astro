---
const { data } = Astro.props;

let classAsString = "";
data.category.forEach((element) => {
  classAsString += element + " ";
});
console.log("classAsString", classAsString);
---

<article class={"card " + classAsString}>
  <a href={"../singleview/" + data.slug}>
    <img src={data.image} alt="random image" />
    <div class="overlay">
      <h1>{data.name}</h1>
      <p class="price">{data.price} kr.</p>
      <a href={"../singleview/" + data.slug}><span class="seemore">Se mere</span></a>
    </div>
  </a>
</article>

<style>
  /* CARD STYLING */
  .card {
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
    background-color: #f7f7f7;
    height: 540px;
    width: 340px;
    border-radius: 10px;
    text-align: left;
    font-family: "Lato";
    line-height: 1.8;
    border-radius: 10px;
    transition: 0.6s;
    text-decoration: none;
  }

  .card:hover {
    box-shadow: 0 8px 20px 0 rgba(0, 0, 0, 0.3);
    transform: scale(1.05);
    cursor: pointer;
  }

  .card img {
    width: 100%;
    height: 365px;
    border-radius: 10px 10px 0 0;
    zoom: 100%;
    object-fit: cover;
  }

  .price {
    color: #494242;
    font-size: 18px;
    margin-bottom: 20px;
  }

  .overlay {
    margin: 20px;
  }

  .overlay h1 {
    font-size: 19px;
    font-family: "Lato";
    color: #494242;
    font-weight: 600;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  /* CARD BUTTON */
  .card a {
    cursor: pointer;
    text-decoration: none;
  }

  .seemore {
    background-color: #678577;
    color: #fff;
    padding: 10px 15px;
    border-radius: 10px;
    font-size: 14px;
    font-weight: 600;
    transition: 0.6s;
  }

  .seemore:hover {
    background-color: #506a5e;
    box-shadow: 0 3px 6px 0 rgb(51, 67, 60);
  }

  .seemore:active {
    box-shadow: 0 3px 5px 0 rgb(51, 67, 60);
  }

  /* DARK MODE */

  body.dark .card {
    background-color: #384b46;
  }

  body.dark .card h1,
  body.dark .card .price {
    color: #fff;
  }
</style>
