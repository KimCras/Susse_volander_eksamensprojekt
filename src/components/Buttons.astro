---
const { category } = Astro.props;
---

<button> {category} </button>

<style>
  button {
    border: 0;
    background-color: #ffff;
    font-family: "Lato";
    font-size: 15px;
    color: #494242;
    padding: 10px;
    width: 120px;
    border-radius: 10px;
    margin-top: 15px;
    margin-left: 40px;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.3);
  }

  button:hover {
    background-color: #dadada;
    cursor: pointer;
  }

  button:active {
    box-shadow: 0 3px 6px 0 rgba(0, 0, 0, 0.2);
    background-color: #dadada;
  }

  button:focus {
    outline: none;
  }

  @media (min-width: 768px) {
    button {
      margin-left: 0;
    }
  }
</style>
