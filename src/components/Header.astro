<header>
  <a href="#" class="burger" id="burgerIcon"><i class="fa-solid fa-bars"></i></a>
  <div class="navbar" id="myNavbar">
    <div class="logo">
      <a href="/"><img src="/webp/logo_header.webp" alt="logo" /></a>
    </div>
    <div class="navbar_menu">
      <a href="/overview/">SHOP</a>
      <a href="/galleri/">GALLERI</a>
      <a href="/workshop/">WORKSHOP</a>
      <a href="/ommig/">OM MIG</a>
      <a href="/kontakt/">KONTAKT</a>


      <i class="fa-solid fa-bag-shopping kurv"><span id="cart-count">0</span></i>


      <center>
        <div>
          <input type="checkbox" class="checkbox" id="checkbox" />
          <label for="checkbox" class="checkbox-label">
            <i class="fas fa-moon"></i>
            <i class="fas fa-sun"></i>
            <span class="ball"></span>
          </label>
        </div>
      </center>
    </div>
  </div>
</header>

<style>
  header {
    display: block;
    justify-content: space-between;
    gap: 10px;
    width: 100%;
    height: auto;
    position: relative;
  }
  .navbar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0px 12px;
    gap: 10px;
    width: 100%;
    font-family: "Lato";
    background-color: #95bb72;
  }
  .navbar_menu {
    padding: 20px;
    justify-content: space-between;
    display: flex;
    gap: 30px;
    align-items: center;
  }
  .burger {
    display: none;
  }
  .kurv {
    font-size: 25px;
  }
  .navbar a:hover {
    color: #f20056;
  }
  a {
    text-decoration: none;
    color: #494242;
  }
  .logo {
    align-items: center;
  }
  .logo img {
    width: 140px;
  }
  .logo img:hover {
    opacity: 70%;
  }

  body.dark {
    background-color: #10180d;
  }
  body.dark .navbar {
    background-color: #1b2d24;
  } /* #9b59b6 */

  body.dark h1,
  body.dark a,
  body.dark .kurv,
  body.dark .navbar_menu a {
    color: #fff;
  }
  body.dark .navbar_menu a:hover {
    color: #f20056;
  }

  .checkbox {
    opacity: 0;
    position: absolute;
  }

  .checkbox-label {
    background-color: #191717;
    width: 50px;
    height: 26px;
    border-radius: 50px;
    position: relative;
    padding: 5px;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .fa-moon {
    color: #f1c40f;
  }

  .fa-sun {
    color: #f39c12;
  }

  .checkbox-label .ball {
    background-color: #fff;
    width: 22px;
    height: 22px;
    position: absolute;
    left: 2px;
    top: 2px;
    border-radius: 50%;
    transition: transform 0.2s linear;
  }

  .checkbox:checked + .checkbox-label .ball {
    transform: translateX(24px);
  }

  .kurv {
    position: relative;
  }

  #cart-count {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(0%, 10%);
    font-size: 12px;
    background-color: #f39c12;
    border-radius: 50px;
    padding: 3px 5px;
    color: #191717;
    border: 1px solid #191717;
  }
  @media screen and (max-width: 780px) {
    header {
      gap: 0;
    }
    .navbar {
      display: none;
      width: 100%;
    }

    .burger {
      background-color: #ecf0e4;
    }
    body.dark .burger {
      background-color: #1b2d24;
    }
    .navbar_menu {
      display: flex;
      flex-direction: column;
      align-items: center;
      padding-left: 31px;
    }
    .burger {
      display: block;
      font-size: 26px;
      padding-left: 20px;
      padding-top: 20px;
    }
    .logo {
      margin-top: 20px;
      max-width: 120px;
    }
    .navbar a {
      color: #494242;
      justify-content: space-between;
      text-decoration: none;
      display: flex;
      padding-bottom: 20px;
    }
    .navbar a:hover {
      color: #f20056;
    }
    .navbar.show {
      display: flex;
      flex-direction: column;
      width: 100%;
      height: auto;
      align-items: center;
      justify-content: space-evenly;
      text-align: center;
      z-index: 1;
    }
    .navbar {
      display: none;
      background-color: #ecf0e4;
      /*padding-right: 60px;
      padding-bottom: 80px;*/
    }
    a {
      text-decoration: none;
      padding: 10px 0;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const cartCount = document.getElementById("cart-count");
    let items = localStorage.getItem("cartItems");

    if (items) {
      cartCount.textContent = items;
    }
  });

  const checkbox = document.getElementById("checkbox") as HTMLInputElement;

  // Event listener for checkbox change
  checkbox.addEventListener("change", () => {
    // Toggle dark mode class on the body
    document.body.classList.toggle("dark");

    // Gem dark mode-indstillingen i localStorage
    if (checkbox.checked) {
      localStorage.setItem("darkMode", "enabled");
    } else {
      localStorage.setItem("darkMode", "disabled");
    }
  });

  // Hent dark mode-indstillingen fra localStorage
  const darkModeSetting = localStorage.getItem("darkMode");

  // Anvend dark mode-indstillingen, hvis den er gemt
  if (darkModeSetting === "enabled") {
    document.body.classList.add("dark");
    checkbox.checked = true;
  } else {
    document.body.classList.remove("dark");
    checkbox.checked = false;
  }
  //////////////////burgermenu//////////////////

  document.addEventListener("DOMContentLoaded", function () {
    document.getElementById("burgerIcon").addEventListener("click", function () {
      var navbar = document.getElementById("myNavbar");
      navbar.classList.toggle("show");
    });
  });
</script>
