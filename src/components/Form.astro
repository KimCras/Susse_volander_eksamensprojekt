<div class="form">
  <form>
    <input type="text" id="name" name="name" placeholder="Dit navn" required />
    <input type="text" id="mail" name="mail" placeholder="Din E-mail" required />
    <textarea id="message" name="message" placeholder="Besked" cols="30" rows="6"></textarea>
    <div class="button-container">
      <button type="submit" value="Send">Send</button>
    </div>
  </form>
</div>

<style>
  /* FORMS */
  form {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 10px;
    margin: 100px;
    font-family: "Hind Madurai";
    width: 400px;
    background-color: #e9e9e9;
    padding: 40px;
    border-radius: 20px;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
  }

  form label {
    font-weight: bold;
    color: #494242;
  }

  form input,
  form textarea {
    padding: 10px;
    border-radius: 10px;
    border: 1px solid #ccc;
  }

  .button-container {
    display: flex;
    justify-content: center;
  }

  form button {
    font-weight: bold;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
    background-color: #678577;
    border-radius: 10px;
    border: none;
    padding: 10px;
    color: white;
    width: 108px;
    margin-top: 15px;
  }

  @media (max-width: 1080px) {
    form {
      width: 70%;
      padding: 30px;
      margin-top: 40px;
      resize: vertical;
    }

    form input,
    form textarea {
      width: 100%;
    }
  }

  /*DARK MODE*/

  body.dark form {
    background-color: #384b46;
  }

  body.dark form input,
  body.dark form textarea {
    background-color: #cfcfcf;
    border: 1px solid #2a2a2a;
    color: #000;
  }
</style>
